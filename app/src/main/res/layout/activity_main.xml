<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:translationY="-700dp"
            android:id="@+id/bgapp"
            android:layout_width="526dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_height="900dp"
            android:scaleType="fitXY"
            android:src="@drawable/bgapp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.923"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    <ImageView
            android:id="@+id/clover"
    android:elevation="6dp"
    android:src="@drawable/clover"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="250dp"
    android:layout_marginRight="250dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

    <LinearLayout
            android:id="@+id/textSplash"
            android:elevation="6dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="256dp">

        <TextView
                android:textSize="26sp"
                android:textColor="#FFF"
                android:text="Welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:textSize="16sp"
                android:textColor="#FFF"
                android:text="       hatapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/texthome"
            android:elevation="6dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toStartOf="parent" >
        <TextView
                android:textSize="26sp"
                android:textColor="#FFF"
                android:text="Explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:textSize="16sp"
                android:textColor="#FFF"
                android:text="Simply makes design good"
                android:layout_width="277dp"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:elevation="6dp"
            android:orientation="vertical"
            android:id="@+id/menus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="80dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="228dp"
            app:layout_constraintHorizontal_bias="0.327">

        <LinearLayout
                android:layout_marginBottom="40dp"
                android:orientation="horizontal"
                android:layout_width="313dp"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_marginRight="40dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <ImageView
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/biton"
                        android:layout_height="100dp"
                        android:layout_width="100dp"
                />

                <TextView
                        android:textSize="16sp"
                        android:textColor="#0E1843"
                        android:text="BitCoin"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                    android:layout_marginRight="50dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <ImageView
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/bellcon"
                        android:layout_height="100dp"
                        android:layout_width="100dp"
                />

                <TextView
                        android:textSize="16sp"
                        android:textColor="#0E1843"
                        android:text="Bells"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:layout_marginBottom="70dp"
                android:orientation="horizontal"
                android:layout_width="313dp"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_marginRight="4dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <ImageView
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/bookcon"
                        android:layout_height="100dp"
                        android:layout_width="100dp"
                />

                <TextView
                        android:textSize="16sp"
                        android:textColor="#0E1843"
                        android:text="        Books"
                        android:layout_gravity="center"
                        android:layout_width="123dp"
                        android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                    android:layout_marginRight="50dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <ImageView
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/bugcon"
                        android:layout_height="100dp"
                        android:layout_width="100dp"
                />

                <TextView
                        android:textSize="16sp"
                        android:textColor="#0E1843"
                        android:text="   Reports"
                        android:layout_gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>